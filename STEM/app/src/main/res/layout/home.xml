<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidprograming.martin.stem.Home"
    android:background="#444343">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STEM"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textSize="85dp"
        android:textColor="#119f07" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDY"
        android:id="@+id/btnStudyHome"
        android:background="#0e09a6"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginTop="122dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btnPlayHome"
        android:layout_below="@+id/btnStudyHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="#9d0404" />

</RelativeLayout>
